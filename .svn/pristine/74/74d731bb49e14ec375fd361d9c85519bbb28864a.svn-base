.tour{
	padding: 25px;
	background-color: #fff;
	box-shadow: inset 0 0 10px #000000;
	position: relative;
	margin-top: 15px;
}
.tour ul li img{
	height: 430px;
    width: 100%;
}
.background-pic{
	opacity: 0.3;
}
.left-section{
	box-sizing: border-box;
}
.close{
	height: 35px;
	position: absolute;
	top: -14px;
	right: -12px;
	cursor: pointer;
}
.tour .lSSlideOuter .lSPager.lSGallery img{
	height: 40px;
}
.tour li.tour-intro img{
	
}
.tour li.tour-intro{
	position: relative;
}
.intro-text{
	position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.62);
	color: #fff;
}
.intro-text h1{
	padding: 15px;
    text-align: center;
	font-weight: normal;
	font-size: 28px;
}
.intro-content{
    width: 60%;
    margin: 0 auto;
    padding: 20px;
    text-align: center;
    margin-top: 11%;
    font-family: 'Droid Serif', serif;
    font-style: italic;
}
.intro-content.end{
	margin-top: 2%;
}
.intro-content p{
	line-height: 2;
	font-size: 22px;
}
.lg-outer .lg-item, .lg-outer .lg-img-wrap{
	width:80% !important;
	left: 17%;
	height: 80%;
}